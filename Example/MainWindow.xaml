<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Target app:"/>
        <TextBox x:Name="textbox_targetApp" Margin="0,5,0,0"/>
        <Button Content="Show WPF Overlay" Margin="0,20,0,0" Click="Button_ShowWPFOverlay_Clicked"/>
        <Button Content="Show Chromium Overlay" Margin="0,5,0,0" Click="Button_ShowChromiumOverlay_Clicked"/>
        <Button Content="Show Bitmap Overlay" Margin="0,5,0,0" Click="Button_ShowBitmapOverlay_Clicked"/>
    </StackPanel>
</Window>
